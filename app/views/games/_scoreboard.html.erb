<table style="max-width: 400px;">
  <caption class="wa-heading-l">Scoreboard</caption>
  <thead style="font-weight: bold;">
    <td>Team</td>
    <td>1</td>
    <td>2</td>
    <td>3</td>
    <td>4</td>
    <td>T</td>
  </thead>
  <tbody>
    <tr>
      <td><%= game.home_team.full_name %></td>
      <td><%= game.q1_home %></td>
      <td><%= game.q2_home %></td>
      <td><%= game.q3_home %></td>
      <td><%= game.q4_home %></td>
      <td><%= "0" %></td>
    </tr>
    <tr>
      <td><%= game.away_team.full_name %></td>
      <td><%= game.q1_away %></td>
      <td><%= game.q2_away %></td>
      <td><%= game.q3_away %></td>
      <td><%= game.q4_away %></td>
      <td><%= "0" %></td>
    </tr>
  </tbody>
</table>
