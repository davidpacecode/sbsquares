<%= turbo_frame_tag "scoreboard_#{@game.id}" do %>
  <%= form_with(model: @game, url: update_scores_game_path(@game), method: :patch) do |form| %>
    <table style="max-width: 600px;">
      <thead style="font-weight: bold;">
        <td>Team</td>
        <td>1</td>
        <td>2</td>
        <td>3</td>
        <td>4</td>
        <td>T</td>
      </thead>
      <tbody>
        <tr>
          <td><%= @game.home_team.full_name %></td>
          <td><%= form.text_field :q1_home %></td>
          <td><%= form.text_field :q2_home %></td>
          <td><%= form.text_field :q3_home %></td>
          <td><%= form.text_field :q4_home %></td>
          <td><%= "0" %></td>
        </tr>
        <tr>
          <td><%= @game.away_team.full_name %></td>
          <td><%= form.text_field :q1_away %></td>
          <td><%= form.text_field :q2_away %></td>
          <td><%= form.text_field :q3_away %></td>
          <td><%= form.text_field :q4_away %></td>
          <td><%= "0" %></td>
        </tr>
      </tbody>
    </table>

    <%= form.submit %>
  <% end %>
<% end %>
