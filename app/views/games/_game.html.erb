<div id="<%= dom_id game %>">

  <%= turbo_frame_tag "scoreboard_#{game.id}" do %>
    <%= render "scoreboard", game: game %>
    <%= link_to "Edit Scores", edit_scores_game_path(game) %>
  <% end %>

  <div>
    <strong>Home team:</strong>
    <%= game.home_team.full_name %>
  </div>

  <% if false %>
  <% if game.team_1_logo.attached? %>
    <div>
      <strong>Team 1 Logo:</strong>
      <%= image_tag game.team_1_logo, width: 100 %>
    </div>
  <% end %>
  <% end %>

  <div>
    <strong>Away team:</strong>
    <%= game.away_team.full_name %>
  </div>

  <% if false %>
  <% if game.team_2_logo.attached? %>
    <div>
      <strong>Team 2 Logo:</strong>
      <%= image_tag game.team_2_logo, width: 100 %>
    </div>
  <% end %>
  <% end %>

  <div>
    <strong>Game datetime:</strong>
    <%= game.game_datetime %>
  </div>

  <div>
    <strong>Status:</strong>
    <%= game.status %>
  </div>

</div>
