<table style="max-width: 300px;">
  <caption class="wa-heading-l">Winners!</caption>
  <thead style="font-weight: bold;">
    <td>Quarter</td>
    <td>Home Digit</td>
    <td>Away Digit</td>
    <td>Winner</td>
  </thead>
  <tbody>
    <% (1..4).each do |i| %>
      <tr>
        <td><%= i %></td>
        <td><%= board.game.winning_digit_for_quarter(i,"home") %></td>
        <td><%= board.game.winning_digit_for_quarter(i,"away") %></td>
        <td><%= board.winning_square(board.game.winning_digit_for_quarter(i,"home"),board.game.winning_digit_for_quarter(i,"away")) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= board.game.quarter_scores %>
